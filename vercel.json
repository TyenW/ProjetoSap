{
	"version": 2,
	"installCommand": "npm install",
	"buildCommand": "npm run build",
	"builds": [
		{ "src": "api/**/*.{js,mjs}", "use": "@vercel/node" },
		{ "src": "dist/**", "use": "@vercel/static" }
	],
	"routes": [
		{ "src": "/api/(.*)", "dest": "/api/$1" },
		{ "src": "^/$", "dest": "/dist/index.html" },
		{ "src": "/(.*)", "dest": "/dist/$1" }
	]
}
